<Window x:Class="WpfApp2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Васильев лаба 2 (Счётчик)" Height="300" Width="400"
        MouseDown="Window_MouseDown">
    <Grid>
        <!-- Счётчик в верхнем левом углу -->
        <Label x:Name="lblCounter" Content="Счетчик: 0" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="20" Margin="10,10,0,0"/>

        <!-- Дополнительные Label -->
        <Label x:Name="lbl1" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,50,0,0"/>
        <Label x:Name="lbl2" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Label x:Name="lbl3" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,50"/>
    </Grid>
</Window>
